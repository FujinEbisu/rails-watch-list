<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h3 class="mb-0"><i class="fas fa-plus me-2"></i>Add Movie to <%= @list.name %></h3>
        </div>
        <div class="card-body">
          <%= simple_form_for @bookmark, url: list_bookmarks_path(@list) do |f| %>
            <div class="mb-3">
              <%= f.label :movie_id, "Select a movie", class: "form-label fw-bold" %>
              <%= f.collection_select :movie_id, Movie.all, :id, :title, 
                  { prompt: 'Choose a movie' }, 
                  { class: "form-select" } %>
            </div>
            
            <div class="mb-3">
              <%= f.label :comment, "Your comment", class: "form-label fw-bold" %>
              <%= f.text_area :comment, 
                  placeholder: "Share your thoughts about this movie (minimum 6 characters)...",
                  class: "form-control", 
                  rows: 3 %>
              <div class="form-text">Comment must be at least 6 characters long.</div>
            </div>
            
            <div class="d-flex gap-2">
              <%= f.submit "Add to List", class: "btn btn-success" %>
              <%= link_to "Cancel", list_path(@list), class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>