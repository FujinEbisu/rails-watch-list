<div class="container p-5">
  <h1 class="align-center">Lists</h1>
    <ul class= "list-group">
      <% @lists.each do |list| %>
        <li class="list-group-item d-flex flex-column align-items-start mb-2">
          <%= link_to list.name, list_path(list) %>
        </li>
      <% if @lists.empty? %>
        <li>No lists found.</li>
      <% end %>
      <% end %>
    </ul>
</div>
